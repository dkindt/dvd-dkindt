<div class="row">
<div class="col-xs-6 col-md-4">
  <%=image_tag @movie.poster %>
</div>

<div class="col-xs-12 col-sm-6 col-md-8">
  <h3>
    <%= @movie.title %>
    (<%= @movie.release_year %>)
        <%=link_to @movie.imdb do%>
    <%=image_tag ("http://ia.media-imdb.com/images/G/01/imdb/images/plugins/imdb_46x22-2264473254._CB306318085_.png") %>
  <%end%>
  </h3>
  <div>
  <% if (@movie.available == true) %>
    <p>Available to rent</p>
    <%= link_to("Rent", rent_movie_path(@movie), :class => "btn btn-success btn-md", :method => :post) %>
  <% else %>
    <p>Checked out by User: <%= @movie.user_name %></p>
    <% if (@movie.rented_by == current_user.id) %>
      <%= link_to("Return", return_movie_path(@movie), :class => "btn btn-warning btn-md", :method => :post) %>
    <% else %>
      <%= link_to("Checked-out", return_movie_path(@movie), :class => "btn btn-warning btn-md disabled", :method => :post) %>
    <% end %>
  <% end %>
</div>
</div>
</div>



