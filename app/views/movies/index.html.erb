<% provide(:title, 'All movies') %>
<h1>All movies</h1>

<div class="row">
  <% @movies.each do |movie| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= link_to(image_tag(movie.poster), movie) %>
      <div class="caption">
        <h4><%= movie.title %> (<%= movie.release_year %>)</h4>
        <% if (movie.available) == true %>
            <p></p>
              <%= link_to("Rent", rent_movie_path(movie), :class => "btn btn-primary btn-block") %>
        <% else %>
            <% if (movie.rented_by == current_user.id) %>
              <%= link_to("Return", return_movie_path(movie), :class => "btn btn-warning btn-block") %>
            <% else %>
              <%= link_to("Checked-out", '#', :class => "btn btn-warning btn-block disabled") %>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>

