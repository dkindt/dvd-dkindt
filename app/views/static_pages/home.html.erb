<div class="center jumbotron">
<% if logged_in? %>
	<h1>Hello, <%= current_user.name %></h1>
		<h2>
		  Feel free to browse our collection
		</h2>
<% else %>
	<h1>Welcome!</h1>
		<h2>
		  Please login in or sign up to view movies.
		</h2>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
<% end %>
</div>



